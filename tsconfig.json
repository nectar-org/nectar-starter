{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": [
        "./src/components/index.ts"
      ],
      "@primitives": [
        "./src/components/ui/primitives/index.ts"
      ],
      "@components/": [
        "./src/components/*"
      ],
      "@modal": [
        "./src/components/common/store/modal-store.tsx"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@content/*": [
        "./content/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@theme": [
        "./src/theme/index.ts"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@data/*": ["data/*"]
    },
    "target": "esnext",
    "lib": ["dom", "es2015", "ESNext.String"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
